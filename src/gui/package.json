{
  "name": "podium-gui",
  "version": "1.0.0",
  "description": "Professional GUI for Podium PHP Development Platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "php",
    "laravel",
    "wordpress",
    "docker",
    "development",
    "gui"
  ],
  "author": "Cane Bay Computers",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "ansi-to-html": "^0.7.2"
  },
  "build": {
    "appId": "com.canebaycomputers.podium",
    "productName": "Podium",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "dir"
    }
  }
}
